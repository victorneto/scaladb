- content_for :header do
  %header
    .container
      .row
        .span7.offset5
          .hero-unit.hero-header
            %h1 Scala dB Acústica
            %p.lead Projeto, consultoria e laudos.
            = link_to "Saiba Mais", empresa_path, :class => "btn btn-primary btn-large"

.block-wide
  .container
    .row
      .span12
        .row-fluid
          .span4
            %h2
              %i.icon-building
              = link_to "Acústica de Edificações", acustica_de_edificacoes_path
            = link_to image_tag("home/acustica-de-edificacoes.jpg", :alt => "Acústica de Edificações", :class => "framed"), acustica_de_edificacoes_path
          .span4
            %h2
              %i.icon-beaker
              = link_to "Indústria", industrias_path
            = link_to image_tag("home/industria.jpg", :alt => "Indústria", :class => "framed"), industrias_path
          .span4
            %h2
              %i.icon-leaf
              = link_to "Meio Ambiente", meio_ambientes_path
            = link_to image_tag("home/meio-ambiente.jpg", :alt => "Meio Ambiente", :class => "framed"), meio_ambientes_path